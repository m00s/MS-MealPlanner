div(ng-include='"components/navbar/navbar.html"')

header#banner.hero-unit
  .container
    h1 "Welcome to the big mama cookbook!"
    p.lead Kick-start your next web app with Angular Fullstack

.container
  .row
    .col-lg-12
      .jumbotron
        h4.page-header Filters
      h3.page-header Recipes
      ul.nav.nav-tabs.nav-stacked.col-md-4.col-lg-4.col-sm-6(ng-repeat='recipe in recipes')
        li
          a(href='#')
            | {{recipe.name}}

    br

    form.form-horizontal.recipe-form
      .form-group
        label.control-label.col-xs-2 Name
        .col-xs-4
          input.form-control(type='text', placeholder='name')
      .form-group
        label.control-label.col-xs-2 Description
        .col-xs-4
          input.form-control(type='textarea', placeholder='description')

      button.btn.btn-primary.pull-right(type='submit', ng-click='addRecipe()') Add New


footer.footer
  .container
    p
      | Angular Fullstack v2.0.13
      = ' | '
      a(href='https://twitter.com/tyhenkel') @tyhenkel
      = ' | '
      a(href='https://github.com/DaftMonk/generator-angular-fullstack/issues?state=open') Issues
