.modal-header
  h3 {{vm.inputDate | date: 'fullDate'}}

.modal-body
  .row
    .col-md-10.col-md-offset-1
      form.form-horizontal

        .panel.panel-default
          .panel-body
            .form-group
              label.col-md-3.control-label Lunch
              .col-md-9
                input.form-control(type="text", placeholder="lunch", ng-model="vm.result.lunch.title")
            .form-group
              .col-md-9.col-md-offset-3
                select.form-control(
                  ng-init="vm.events[0].recipe.title"
                  ng-model="vm.result.lunch"
                  ng-change="vm.onRecipeChange('lunch')",
                  ng-options="r as r.title for r in vm.recipes")
                  option(value='', selected="") Choose

        .panel.panel-default
          .panel-body
            .form-group
              label.col-md-3.control-label Dinner
              .col-md-9
                input.form-control(type="text", placeholder="dinner", ng-model="vm.result.dinner.title")
            .form-group
              .col-md-9.col-md-offset-3
                select.form-control(
                  ng-init="vm.events[1].recipe.title",
                  ng-model="vm.result.dinner"
                  ng-change="vm.onRecipeChange('dinner')",
                  ng-options="r as r.title for r in vm.recipes")
                  option(value='', selected, disabled) Choose

.modal-footer
  button.btn.btn-warning(ng-click="vm.close()") Cancel
  button.btn.btn-info(ng-click="vm.submit()") Submit
