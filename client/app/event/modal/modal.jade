.modal-header
  h3 {{inputDate | date: 'fullDate'}}

.modal-body
  .row
    .col-md-10.col-md-offset-1
        form.form-horizontal

          .panel.panel-default
            .panel-body
              .form-group
                label.col-md-3.control-label Lunch
                .col-md-9
                  input.form-control(type="text", placeholder="lunch", value="{{events[0].recipeTitle}}", ng-model="event[0].recipeTitle")
              .form-group
                .col-md-9.col-md-offset-3
                  select.form-control(ng-model="events[0].recipe", ng-options="r._id as r.title for r in recipes")
                    option(value='', selected="", disabled) Choose

          .panel.panel-default
            .panel-body
              .form-group
                label.col-md-3.control-label Dinner
                .col-md-9
                  input.form-control(type="text", placeholder="dinner", value="{{events[1].recipeTitle}}", ng-model="events[1].recipeTitle")
              .form-group
                .col-md-9.col-md-offset-3
                  select.form-control(ng-model="events[1]._id", ng-options="r._id as r.title for r in recipes")
                    option(value='', selected, disabled) Choose

.modal-footer
  button.btn.btn-warning(ng-click="close()") Cancel
  button.btn.btn-info(ng-click="submit()") Submit
